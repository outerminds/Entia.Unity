			"label": "build debug",
			"command": "dotnet",
			"type": "process",
			"group": "build",
			"args": [
				"build",
				"${workspaceFolder}/Entia.Unity.sln",
				"--configuration",
				"Debug"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build release",
			"command": "dotnet",
			"type": "process",
			"group": "build",
			"args": [
				"build",
